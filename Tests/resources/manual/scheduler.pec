define buffer as Text attribute
define Sink as singleton with attribute buffer

define "schedules" as test method doing:
	with Sink, do:
		buffer = ""
	define AppendToSink as method doing:
		with Sink, do:
			buffer = buffer + "/callback1"
	callback = Method: AppendToSink	
	scheduleJob callback with (now + 'PT1S') as executeAt
	sleep 500
	with Sink, do:
		buffer = buffer + "/main"
	sleep 1000
and verifying: 
	Sink.buffer = "/main/callback1"

	
define "repeats" as test method doing:
	with Sink, do:
		buffer = ""
	define AppendToSink as method doing:
		with Sink, do:
			buffer = buffer + "/callback2"
	callback = Method: AppendToSink	
	job = scheduleJob callback with (now + 'PT1S') as executeAt and 'PT1S' as repeatEvery
	sleep 500
	with Sink, do:
		buffer = buffer + "/main"
	sleep 3000
	cancelJob job	
and verifying: 
	Sink.buffer = "/main/callback2/callback2/callback2"
	

define "cancels" as test method doing:
	with Sink, do:
		buffer = ""
	define AppendToSink as method doing:
		with Sink, do:
			buffer = buffer + "/callback3"
	callback = Method: AppendToSink	
	job = scheduleJob callback with (now + 'PT3S') as executeAt
	sleep 500
	with Sink, do:
		buffer = buffer + "/main"
	cancelJob job	
	sleep 3000
and verifying: 
	Sink.buffer = "/main"

	

	